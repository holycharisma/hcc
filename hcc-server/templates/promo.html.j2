	// track seek functionality
	
	function genFn(n) {
		return function handleProgressClicked(e) {
		  if( Amplitude.getActiveIndex() == n ){
		    var offset = this.getBoundingClientRect();
		    var x = e.pageX - offset.left;

		    Amplitude.setSongPlayedPercentage( ( parseFloat( x ) / parseFloat( this.offsetWidth) ) * 100 );
		  }
		}
	}
	
	document.getElementById('song-played-progress-0').addEventListener('click', genFn(0));
	document.getElementById('song-played-progress-1').addEventListener('click', genFn(1));
	document.getElementById('song-played-progress-2').addEventListener('click', genFn(2));
	
